<div id="page-wrapper" >
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <h1 class = 'data-title'>Edit</h1>
                <p>Welcome to Nelisa Spaza Inc Inventory System</p>
            </div>
        </div>
        <hr />
{{#if admin}}
<!--Add product section-->
        <h1>Add a Product</h1>
        <br />
        <form action="/products/add" method="POST">
            Product Name: <br /><input type="text" name="prod_name">
            <br/><br/>Category ID: <br/>
            <!--dropdown menu gets cat_name from category select tag-->
            <select name="cat_id">
                {{#category}}
                    <option value="{{cat_id}}">{{cat_name}}</option>
                {{/category}}
            </select>
            <br /><br /><input type="submit">
        </form>
        <hr />
{{else}}
    <h2>You do not have access to this page</h2>
{{/if}}
    </div>
</div>
