<div id="page-wrapper" >    <div id="page-inner">        <div class="row">            <div class="col-md-12 col-sm-12 col-xs-12">                <h1 class = 'data-title'>Edit</h1>                <p>Welcome to Nelisa Spaza Inc Inventory System</p>            </div>        </div>        <hr />{{#if admin}}        <h1>Add a Sale</h1>        <br />        <form action="/sales/add" method="POST">            Date: <br /><input type="date" name="date">            <br/><br/>            Quantity Sold: <br /><input type="number" name="qtySold">            <br/><br/>Product: <br/>            <!--dropdown menu gets cat_name from category-->            <select name="prod_id">                {{#product}}                    <option value="{{prod_id}}">{{prod_name}}</option>                {{/product}}            </select>            <br/><br/>            Sale Price: <br /><input type="number" step="0.01" name="salePrice">            <br /><br /><input type="submit">        </form>        <hr />{{else}}    <h2>You do not have access to this page</h2>{{/if}}    </div></div></div>