<div id="page-wrapper" >    <div id="page-inner">        <div class="row">            <div class="col-md-12 col-sm-12 col-xs-12">                <h1 class = 'data-title'>Edit</h1>                <p>Welcome to Nelisa Spaza Inc Inventory System</p>            </div>        </div>        <hr />{{#if admin}}        <h1>Add a Purchase</h1>        <br />        <form action="/purchases/add" method="POST">            Product:<br/>            <!--Drop down menu for the product-->            <select name="prod_id">                {{#product}}                    <option value="{{prod_id}}">{{prod_name}}</option>                {{/product}}            </select><br/><br/>            Supplier:<br/>            <!--Drop down menu for supplier-->            <select name="supplier_id">                {{#supplier}}                    <option value="{{supplier_id}}">{{supplier_name}}</option>                {{/supplier}}            </select><br/><br/>            Date: <br /><input type="date" name="date">            <br/><br/>            Quantity: <br /><input type="number" name="quantity">            <br/><br/>            Cost:<br /><input type="number" step="0.01" name="cost">            <br /><br /><input type="submit">        </form>        <hr />{{else}}    <h2>You do not have access to this page</h2>{{/if}}    </div></div>