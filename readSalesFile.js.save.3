var csv = require('fast-csv');
var fs = require('fs');
var stream = fs.createReadStream("salesHistory.csv");

var itemArr = [];
 
csv
 .fromStream(stream,{delimiter: ';'}, {headers : ["day", "date", "stockItem", "noSold", "salesPrice"]})
 .on("data", function(data){
     itemArr.push(data);
 })
 .on("end", function(){
	
	itemArr.sort((function(index){
    		return function(a, b){
        	return ((a[index] === b[index]) ? 0 : (a[index] < b[index] ? -1 : 1));
     console.log(itemArr);
 });
 
